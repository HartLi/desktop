# OS-dependent variables

win32 {
DEFINES += _WIN32_WINNT=0x0501
DEFINES += WINVER=0x0501
}

# Subprojects names

UTIL_PROJ = util
TESTS_HELPER_PROJ = tests-helper

# Targets

TESTS_HELPER_TARGET = TestsHelper

# Project scructure

SRC_DIR = src
BIN_DIR = bin
