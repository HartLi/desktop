TESTS_HELPER_ROOT_DIR = $$UTILS_DIR/$$TESTS_HELPER_PROJ
TESTS_HELPER_BIN_ROOT_DIR = $$UTIL_BIN_DIR/$$TESTS_HELPER_PROJ

TESTS_HELPER_SRC_DIR = $$TESTS_HELPER_ROOT_DIR/$$SRC_DIR
